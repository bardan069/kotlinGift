            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.GiftShop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

